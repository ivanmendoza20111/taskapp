{% extends 'base.html.twig' %}

{% block title %}
    Lista de Usuarios
{% endblock %}

{% block body %}
    <div class="container">
    <h1> Lista de Usuarios </h1>
    <table class="table table-condensed table-striped table-responsive">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>UserName</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td>{{ usuario.id }}</td>
                <td>{{ usuario.nombre }}</td>
                <td>{{ usuario.username }}</td>
            </tr>

        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}